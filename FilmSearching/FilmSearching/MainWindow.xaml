<Window x:Class="FilmSearching.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilmSearching"
        mc:Ignorable="d"
        Title="Поиск фильмов" Height="450" Width="587.054" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="search_btn" Content="Найти" HorizontalAlignment="Left" Margin="435,36,0,0" VerticalAlignment="Top" Width="130" Height="40" FontSize="16" Click="Button_Click"/>
        <TextBox x:Name="search_box" HorizontalAlignment="Left" Height="40" Margin="10,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="407" UndoLimit="30" FontSize="18"/>
        <Label Content="Введите часть названия для поиска:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="243" FontSize="14"/>
        <DataGrid x:Name="dtGrid" HorizontalAlignment="Left" Height="304" Margin="10,92,0,0" VerticalAlignment="Top" Width="555" IsReadOnly="True" FontSize="14"/>

    </Grid>
</Window>
